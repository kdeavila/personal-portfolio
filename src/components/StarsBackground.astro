<div id="starry-background"></div>

<style is:global>
    #starry-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, #0d192d 0%, #0d0f22 100%);
        overflow: hidden;
        z-index: -1;
    }

    .star {
        position: absolute;
        border-radius: 50%;
        background: white;
        filter: blur(0);
        opacity: 0;
        animation: twinkle 4s infinite ease-in-out;
    }
    
    @keyframes twinkle {
        0%,
        100% {
            opacity: 0;
            filter: blur(0);
            transform: scale(0.5);
        }
        50% {
            opacity: .8;
            filter: blur(1px);
            transform: scale(1);
        }
    }
</style>

<script>
    const generateStars = () => {
        const container = document.getElementById("starry-background");
        const starCount = 200;

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement("div");
            star.classList.add("star");

            const size = Math.random() * 3 + 1;
            star.style.width = `${size}px`;
            star.style.height = `${size}px`;

            star.style.top = `${Math.random() * 100}%`;
            star.style.left = `${Math.random() * 100}%`;

            star.style.animationDelay = `${Math.random() * 4}s`;

            container.appendChild(star);
        }
    };

    window.addEventListener("DOMContentLoaded", generateStars);
</script>
