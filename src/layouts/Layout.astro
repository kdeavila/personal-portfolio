---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "@fontsource/onest/400.css";
import "@fontsource/onest/700.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Página web personal de Keyner de Ávila, desarrollador Frontend developer Jr"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/react.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-[#EDF1F8] bg-[#14253d]">
		<slot />
	</body>
</html>

<style is:global>
	body {
		font-family: "Onest", sans-serif;
	}
</style>
